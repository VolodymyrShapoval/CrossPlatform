@model IEnumerable<Lab7.WebApp.Database.Models.Customer>

@{
    ViewData["Title"] = "Customer Directory";
}

<h1>Customer Directory</h1>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Title</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Phone</th>
            <th>City</th>
            <th>State</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var customer in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Title</td>
                    <td>@customer.Gender</td>
                    <td>@customer.EmailAddress</td>
                    <td>@customer.PhoneNumber</td>
                    <td>@customer.City</td>
                    <td>@customer.State</td>
                    <td>
                        <button asp-controller="Customer" asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-info btn-sm">Details</button>
                        <button asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-warning btn-sm">Edit</button>
                        <form asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.CustomerId" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center">No customers found.</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td>#</td>
            <td><input type="text" id="newFirstName" placeholder="First Name" class="form-control" /></td>
            <td><input type="text" id="newLastName" placeholder="Last Name" class="form-control" /></td>
            <td><input type="text" id="newTitle" placeholder="Title" class="form-control" /></td>
            <td>
                <select id="newGender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </td>
            <td><input type="email" id="newEmail" placeholder="Email" class="form-control" /></td>
            <td><input type="text" id="newPhone" placeholder="Phone" class="form-control" /></td>
            <td><input type="text" id="newCity" placeholder="City" class="form-control" /></td>
            <td><input type="text" id="newState" placeholder="State" class="form-control" /></td>
            <td>
                <button type="button" id="addCustomerButton" class="btn btn-primary" onclick="addCustomer()">Add</button>
            </td>
        </tr>
    </tfoot>
</table>
